                          <q-item clickable>
                            <q-item-section>Share</q-item-section>
                          </q-item>
                        </q-list>
                      </q-menu>
                    </q-btn>
                    ]]></text>
                </render-mode>
            </box-toolbar>
            <box-body>
                <dynamic-container id="CustomerBasicContainer" transition="../CustomerBasic" parameter-map="[partyId:partyId]"/>
