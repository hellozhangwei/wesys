<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-2.1.xsd"
        default-menu-title="客户管理" default-menu-index="2" menu-image="o_group" menu-image-type="icon">

    <subscreens default-item="CustomerFind"/>

    <pre-actions><set field="roleTypeId" value="Customer"/></pre-actions>

    <actions>
        <entity-find-one entity-name="mantle.party.PartyDetail" value-field="partyDetail"/>
    </actions>
    
    <widgets>
        <link url="CustomerFind" text="返回客户列表" icon="fa fa-angle-double-left" link-type="anchor" style="q-mb-md block text-grey" condition="partyDetail"/>
        <label text="PartyNameTemplate" text-map="partyDetail" type="div" condition="partyDetail" style="row q-mb-md text-h3"/>
        <subscreens-panel id="CustomerPanel" type="popup"/>
    </widgets>

</screen>
