<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-2.1.xsd"
        default-menu-title="分类树" default-menu-index="99">

    <parameter name="productCategoryId"/>

    <transition name="editCategory"><default-response url="../Category/EditCategory"/></transition>

    <actions>
        <set field="rootProductCategoryId" value="PopcBrowseRoot"/>

        <if condition="!productCategoryId">
            <set field="productCategoryId" from="rootProductCategoryId"/>
        </if>

        <entity-find entity-name="mantle.product.category.ProductCategoryRollup" list="selectedProductCategoryList" cache="false">
            <econdition field-name="productCategoryId" from="productCategoryId"/>
        </entity-find>

        <set field="selectedProductCategory" from="selectedProductCategoryList?.first"/>

        <script>
            if(selectedProductCategory) {
                idPathSb = new StringBuilder(selectedProductCategory.productCategoryId)

                while (selectedProductCategory?.productCategoryId) {
                    idPathSb.insert(0, "/").insert(0, selectedProductCategory.parentProductCategoryId)
                    selectedProductCategory = ec.entity.find("mantle.product.category.ProductCategoryRollup")
                            .condition("productCategoryId", selectedProductCategory.parentProductCategoryId).list()?.first
                }
            }

        </script>

    </actions>

    <widgets>
        <container style="row">
            <container style="col-lg-2">
                <tree name="CategoryTree" open-path="${idPathSb.toString()}">
                    <parameter name="rootProductCategoryId"/>

                    <tree-node name="CategoryNode">
                        <link url="editCategory" dynamic-load-id="CategoryDetailContainer"
                              text="${nodeList_entry?.categoryName}"
                              id="${treeNodeId == '#' ? '' : treeNodeId + '/'}${nodeList_entry?.productCategoryId}">
                            <parameter name="productCategoryId" from="nodeList_entry?.productCategoryId"/>
                        </link>
                        <tree-sub-node node-name="CategoryNode" list="categoryList">
                            <actions>
                                <set field="parentProductCategoryId" from="treeNodeId.split('/').last()"/>
                                <entity-find entity-name="mantle.product.category.ProductCategoryChildren" list="categoryList" cache="false">
                                    <econdition field-name="parentProductCategoryId" from="parentProductCategoryId"/>
                                </entity-find>
                            </actions>
                        </tree-sub-node>
                    </tree-node>
                    <tree-sub-node node-name="CategoryNode" list="topLevelCategories">
                        <actions>
                            <entity-find-one entity-name="mantle.product.category.ProductCategory" value-field="rootCategory" cache="false">
                                <field-map field-name="productCategoryId" from="rootProductCategoryId"/>
                            </entity-find-one>
                            <set field="topLevelCategories" from="[rootCategory]"/>
                        </actions>
                    </tree-sub-node>
                </tree>

            </container>
            <container style="col-lg-10">
                <dynamic-container id="CategoryDetailContainer" transition="editCategory"/>
            </container>
        </container>

    </widgets>
</screen>
